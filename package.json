{
  "devDependencies": {
    "@types/jest": "^21.1.2",
    "jest": "^21.2.1",
    "ts-jest": "^21.1.2"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  },
  "scripts": {
    "test": "jest --watch"
  },
  "dependencies": {
    "typescript": "^2.5.3"
  }
}
